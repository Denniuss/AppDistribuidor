<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FinalizarPedidoFragment">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        tools:context="com.newmantech.appdistribuidor.AtenderPedidoMapsActivity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="600dp">




        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/directions"
            android:drawablePadding="8dp"
            android:id="@+id/btnAtender"
            android:textColor="@android:color/white"
            android:backgroundTint="#0C1FC7"
            android:text="Atender"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/thumb_up_b"
            android:drawablePadding="8dp"
            android:id="@+id/btnFinalizar"
            android:textColor="@android:color/white"
            android:backgroundTint="#0C1FC7"
            android:text="Finalizar"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ambulance_b"
            android:drawablePadding="8dp"
            android:id="@+id/btnIncidente"
            android:textColor="@android:color/white"
            android:backgroundTint="#0C1FC7"
            android:text="Incidencia"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />



        <TextView
            android:id="@+id/idpedido"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:gravity="center_horizontal"
            android:paddingTop="0dp"
            android:text="Idpedido"
            android:visibility="visible" />



    </LinearLayout>



</FrameLayout>